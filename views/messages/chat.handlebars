<img src="/icons/left.png" class="go-back bck_btn" />

{{#if new_chat}}

<form method="post" action="/messages/new/{{other_user}}">
   <div class="msg_container">
      <input type="hidden" name="_x_" value="$2a$10$BJn0b4OzBarDigcTUl0kejbffkejbfvxSI.JrlLKeSsOi8oKqBAK" />
      <input type="hidden" name="_c_" value="{{csrf_web_token}}" />
      <input type="hidden" name="orange_blossom" value="" />
      <input type="hidden" name="users[]" value="{{other_user}}" />
      <input type="hidden" name="users[]" value="{{user.username}}" />
      <input type="hidden" name="sent_by" value="{{user.username}}" />
      <input type="hidden" name="profileimage" value="{{user.profileimage}}" />
      <input class="form__input" type="text" placeholder="Send a message" name="message" value="{{message}}" required  autocapitalize="none" />
      <button class="msg_send" name="submit" type="submit">Send</button>
   </div>
</form>

{{else}}

<div class="direct_msg_container">

   {{#each message.messages}}

   <div class="direct_msg_wrapper">
      <a href="/profile/{{this.username}}">
         <div class="topnav__user">
            <div class="topnav__profile-img-container">
               <img class="profile__img comment_profileimage" src="https://s3.amazonaws.com/hryzn-app-static-assets/{{this.profileimage}}">
            </div>
            <p class="direct_msg_username">@{{this.username}}</p>
         </div>
      </a>
      <p class="comment_msg">{{this.message}}</p>

   </div>

   {{/each}}

</div>

<form method="post" action="/messages/chat/{{message.id}}">
   <div class="msg_container">
      <input type="hidden" name="_x_" value="$2a$10$BJn0b4OzBarDigcTUl0kejbffkejbfvxSI.JrlLKeSsOi8oKqBAK" />
      <input type="hidden" name="_c_" value="{{csrf_web_token}}" />
      <input type="hidden" name="orange_blossom" value="" />
      <input type="hidden" name="username" value="{{user.username}}" />
      <input type="hidden" name="profileimage" value="{{user.profileimage}}" />
      <input class="form__input" type="text" placeholder="Send a message" name="message" value="" required  autocapitalize="none" />
      <button class="msg_send" name="submit" type="submit">Send</button>
   </div>
</form>

<div class="modalBtn delete_chat">I would like to delete this chat</div>

{{! Hidden Delete Modal }}
<div class="popModal modalBackground">
  <div class="modal-content">

    <div class="modal-header ">
      <p>Are You Sure?</p>
    </div>

    <div class="modal-body">
      <p>Deleting this is permanent and cannot be undone.</p>
    </div>

    <div class="modal-footer">
      <a href="/messages/chat/delete/{{message.id}}" class="btn__secondary project_submit">Yes I'm Sure</a>
      <span class="closeModal btn__primary">Cancel</span>
    </div>

  </div>

</div>

{{/if}}
