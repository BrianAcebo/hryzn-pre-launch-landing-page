<div class="blog_main_container">

   <h1 class="blog_welcome_title">{{post.post_title}}</h1>

   <div class="post_data_container">
      <a href="/profile/{{post.post_owner}}">@{{post.post_owner}}</a>
      <p>{{post.post_date}}</p>
      {{#if hryznAdmin}}<a href="/blog/edit-post/{{post._id}}">Edit</a>{{/if}}
   </div>

   <div class="post_detail_img_container">
      <div class="post_detail_img_wrapper">
         <img src="https://s3.amazonaws.com/hryzn-app-static-assets/{{post.post_image}}" class="img-responsive" alt="{{post.post_title}}" />
      </div>
   </div>

   <div class="post_detail_notes">
      {{{post.post_notes}}}
   </div>

   <div class="most_recent_posts_container">
      {{#if most_recent_posts}}
      {{#each most_recent_posts}}
      <a href="/blog/{{post_slug}}">
         <div class="most_recent_post_card">
            <div class="most_recent_img_container">
               <img src="https://s3.amazonaws.com/hryzn-app-static-assets/{{post_image}}" class="img-responsive" alt="{{post_title}}" />
            </div>

            <div class="post_info_container">
               <p class="post_date">{{post_date}}</p>
               <h3 class="post_title">{{post_title}}</h3>
               <div class="post_btn">view</div>
            </div>
         </div>
      </a>
      {{/each}}
      {{/if}}
   </div>

</div>
