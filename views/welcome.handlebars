<!-- Top Picks-->
<section id='works' class="s-works">

   <div class="intro-wrap">

   <div class="row section-header has-bottom-sep light-sep" data-aos="fade-up">
      <div class="col-full">
         <h3 class="subhead">Our Top Picks</h3>
         <h1 class="display-2">Our latest works</h1>
      </div>
   </div>

   </div>

    <div class="top_picks_container" data-aos="fade-up">

      {{#if projects}}
      <div class="masonryContainer">
         {{#each projects}}
            {{#if is_private}}
            {{! Check if the project is a private project, we do not want to show private projects }}
            {{else}}
            <div class="masonryItem">
               <a href="/p/details/{{id}}/guest" class="project_link">
                  <div class="project_card">
                     <img src="https://s3.amazonaws.com/hryzn-app-static-assets/{{project_image}}" class="img-responsive" alt="{{project_title}}" />
                  </div>
               </a>
            </div>
            {{/if}}
         {{/each}}
      </div>
      {{else}}
      {{! Something went wrong}}
      <p class="error-message">
         Sorry, we couldn't find any projects.
      </p>
      {{/if}}
   </div>

</section>
<!-- /Top Picks -->


