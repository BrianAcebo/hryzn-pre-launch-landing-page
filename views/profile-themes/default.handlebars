                  <input type="hidden" name="user_username" value="{{user.username}}">
                  <input type="hidden" name="profile_username" value="{{profile.username}}">
                  <button class="profile__unfollow profile_main_accent_color profile_follow_btn profile_btns_rounding profile_main_font" name="submit" type="submit">Unsubscribe</button>
