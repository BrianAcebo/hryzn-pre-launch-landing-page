{{#if profile}}

<div class="loader_overlay">
   <div class="loader_wrapper">
      <div class="loader"></div>
      <p class="loader_text loader_text-1">Our robots are looking for the cool stuff.</p>
      <p class="loader_text loader_text-2">I hope you're having a nice day.</p>
      <p class="loader_text loader_text-3">Soon the computers will just take over.</p>
      <p class="loader_text loader_text-4">The things are doing the stuff.</p>
      <p class="loader_text loader_text-5">Your hair looks pretty.</p>
   </div>
</div>

<style>
   .profile_main_accent_color {
      background: {{#if profile.profile_main_accent_color}}{{profile.profile_main_accent_color}}{{else}}#31375A{{/if}};
      color: {{#if profile.profile_main_font_accent_color}}{{profile.profile_main_font_accent_color}}{{else}}#ffffff{{/if}};
   }

   {{#if user_follows_profile}}
   .profile_main_accent_color.profile_follow_btn {
      border: 1px solid {{#if profile.profile_main_accent_color}}{{profile.profile_main_accent_color}}{{else}}#31375A{{/if}};
      color: {{#if profile.profile_main_font_accent_color}}{{profile.profile_main_font_accent_color}}{{else}}#31375A{{/if}};
      background: transparent;
   }
   {{/if}}

   .profile_secondary_accent_color {
      background: {{#if profile.profile_secondary_accent_color}}{{profile.profile_secondary_accent_color}}{{else}}#f1f1f1{{/if}};
      color: {{#if profile.profile_secondary_font_accent_color}}{{profile.profile_secondary_font_accent_color}}{{else}}#000000{{/if}};
   }

   .profile_btns_rounding {
      border-radius:{{#if profile.profile_btns_rounding}}{{profile.profile_btns_rounding}}{{else}}0{{/if}}px;
   }

   .profile_main_font {
      font-family: '{{#if profile.profile_main_font}}{{profile.profile_main_font}}{{else}}Poppins{{/if}}';
   }

   .profile_secondary_font {
      font-family: '{{#if profile.profile_secondary_font}}{{profile.profile_secondary_font}}{{else}}proxima-nova{{/if}}';
   }

   {{#if profile.profile_project_backgroundimage}}
   .profile_project_backgroundimage {
      background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('https://s3.amazonaws.com/hryzn-app-static-assets/{{profile.profile_project_backgroundimage}}');
      background-size: cover;
      background-repeat: no-repeat;
      background-attachment: fixed;
      background-position: center;
      padding: 25px 25px 100px 25px;
   }

   #mainBody {
      padding: 100px 0 0 0!important;
   }

   @media screen and (max-width: 992px) {
      #mainBody {
         padding: 0!important;
      }
   }

   .followers__following a,
   .followers__following a strong,
   .micro_tag,
   .micropost_card .micro_title {
      color: #fff;
   }

   .micropost_card {
      background: transparent;
   }

   .micropost_card.card_is_micro_text {
      background: #fff;
      border: none;
   }
   {{else}}
   {{#if profile.profile_project_background_color}}
   .profile_project_backgroundimage {
      background: {{profile.profile_project_background_color}};
      background-size: cover;
      background-repeat: no-repeat;
      background-attachment: fixed;
      background-position: center;
      padding: 25px 25px 100px 25px;
   }

