<div class="form-container form__settings">
   <h3 class="form__h3">Edit Profile</h3>
   <form id="settingsForm" method="post" action="/settings" enctype="multipart/form-data">
      <div class="form-container-2">
         <div class="row">
            <div class="col-lg-6">
               <input class="form__input" type="text" placeholder="First name" name="firstname" value="{{user.firstname}}" />
            </div>

            <div class="col-lg-6">
               <input class="form__input" type="text" placeholder="Last name" name="lastname" value="{{user.lastname}}" />
            </div>
         </div>
         {{! For future use <input class="form__input" type="text" placeholder="Enter username" name="username" value="{{user.username}}{{!" required autocapitalize="none" /> }}
         <input class="form__input" type="email" placeholder="Enter email address" name="email" value="{{user.email}}" required autocapitalize="none" />

         <label for="profileimage" class="form__label">Select your profile image</label>
         <input id="profileImage" class="form__input" type="file" name="images[]" value="{{user.profileimage}}" />

         <label for="backgroundimage" class="form__label">Change your profile background</label>
         <input id="backgroundImage" class="form__input" type="file" name="images[]" value="{{user.backgroundimage}}" />


         <label for="bio" class="form__label">Enter a bio</label>
         <textarea name="bio" value="{{user.bio}}" class="form__input profile_bio">{{user.bio}}</textarea>


         <input class="form__input" type="text" placeholder="Enter your website link without https://" name="website_link" value="{{user.website}}" autocapitalize="none" />
         <input class="form__input" type="text" placeholder="Enter your Youtube username" name="youtube_link" value="{{user.youtube}}" autocapitalize="none" />
         <input class="form__input" type="text" placeholder="Enter your Twitter username" name="twitter_link" value="{{user.twitter}}" autocapitalize="none" />
         <input class="form__input" type="text" placeholder="Enter your Instagram username" name="instagram_link" value="{{user.instagram}}" autocapitalize="none" />
         <input class="form__input" type="text" placeholder="Enter your Facebook username" name="facebook_link" value="{{user.facebook}}" autocapitalize="none" />

         <input type="hidden" id="img_indices" name="img_indices" value="" />
         <input type="hidden" name="id" value="{{user.id}}">

         <button id="settingsSubmit" class="form__sign-up-button" name="submit" type="submit">Submit Changes</button>
     </div>
   </form>
   <p class="delete-link modalBtn">I would like to delete my account</p>

</div>

<!-- Hidden Delete Modal -->
<div class="popModal modalBackground">
  <div class="modal-content">
    <div class="modal-header">
      <p>Are You Sure?</p>
    </div>
    <div class="modal-body">
      <p>Deleting your account is permanent and cannot be undone.</p>
      <p><small>All of your projects and information will be deleted.</small></p>
    </div>
    <div class="modal-footer">
      <a href="/delete/{{user.id}}" class="btn__secondary">Yes I'm Sure</a>
      <span class="closeModal btn__primary">Cancel</span>
    </div>
  </div>
</div>
