   <script src="/js/vendor/trumbowyg-allowtags.js" type="text/javascript"></script>
   <script src="/js/vendor/trumbowyg-insertaudio.js" type="text/javascript"></script>
   <script src="/js/editor.js" type="text/javascript"></script>

   {{#if notes_is_empty_string}}
   {{! Do nothing }}
   {{else}}
   <script>
   $(document).ready(function() {
      $('#editor').trumbowyg('html', '{{{project_notes}}}');
   });
   </script>
   {{/if}}

   <script src="https://cdn.rawgit.com/harvesthq/chosen/gh-pages/chosen.jquery.min.js"></script>
   <script>
   $(".chosen-select").chosen({
      no_results_text: "Oops, nothing found!",
      max_selected_options: 5
   });
   </script>

   {{/if}}

