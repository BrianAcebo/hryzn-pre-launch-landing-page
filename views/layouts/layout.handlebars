   <script src="/js/macy.js" type="text/javascript"></script>
   <script>
      var masonry = new Macy({
         container: ".masonryContainer",
         trueOrder: false,
         waitForImages: false,
         useOwnImageLoader: false,
         debug: true,
         mobileFirst: false,
         margin: 35,
         columns: 5,
         breakAt: {
            992: 4,
            768: 3,
            595: 2
         }
      });
   </script>
   {{/if}}

   {{! For DEV
   <script src="/js/main.js" type="text/javascript"></script>
