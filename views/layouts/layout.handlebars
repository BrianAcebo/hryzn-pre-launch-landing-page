      <meta property="twitter:site" name="twitter:site" content="@hryzn" data-app>
      <meta name="twitter:card" content="summary" />
      <meta name="twitter:description" content="{{#if project.project_description}}{{project.project_description}}{{else}}{{#if page_description}}{{page_description}}{{else}}Create, explore, and share your ideas on a powerful social writing platform.{{/if}}{{/if}}" data-app />
