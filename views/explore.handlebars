                  {{/if}}

               {{/if}}

            {{/each}}

         </div>

      {{else}}

         {{! Something went wrong }}
         <p class="error-message">Sorry, we couldn't find what you were looking for.</p>

      {{/if}}

   {{else}}
      {{#if user_search}}
      {{else}}
         {{#if group_search}}
         {{else}}
            {{#if project_search}}
